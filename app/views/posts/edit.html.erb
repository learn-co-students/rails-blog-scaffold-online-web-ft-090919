<h1>Editing Post</h1>

<%= form_for(@post) do |f| %>
    <label>Title:</label><br>
    <%= f.text_field :title %><br>

    <label>Description:</label><br>
    <%= f.text_field :description %><br>
    <br>
    <%= f.submit %>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>
